@model List<Product>

@{
    var gender = Context.Request.Query["gender"].ToString();
    var searchTerm = Context.Request.Query["SearchTerm"].ToString();
    var mainCategoryId = Context.Request.Query["MainCategoryId"].ToString();
    var subCategoryId = Context.Request.Query["SubCategoryId"].ToString();
    var brand = Context.Request.Query["Brand"].ToString();
    var pageTitle = string.IsNullOrEmpty(gender) ? "Tüm Ürünler" : $"{gender} Giyim";
    ViewData["Title"] = pageTitle;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<h2>@pageTitle</h2>

<form action="/Customer/Product/Products" method="get" class="mb-4">
    <div class="row">
        <div class="col-md-2">
            <input type="text" name="SearchTerm" class="form-control" placeholder="Ürün adı, açıklama..." value="@searchTerm" />
        </div>

        <div class="col-md-2">
            <select id="MainCategorySelect" name="MainCategoryId" class="form-select">
                <option value="">Tümü</option>
                @foreach (var main in ViewBag.MainCategories)
                {
                    <option value="@main.Id">@main.Name</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <select id="SubCategorySelect" name="SubCategoryId" class="form-select">
                <option value="">Tümü</option>
                @* JavaScript ile doldurulacak *@
            </select>
        </div>

        <div class="col-md-2">
            <select name="Brand" class="form-select">
                <option value="">Tümü</option>
                @foreach (var brandItem in ViewBag.Brands)
                {
                    <option value="@brandItem">@brandItem</option>
                }
            </select>
        </div>

        <div class="col-md-2">
            <input type="submit" value="Filtrele" class="btn btn-primary w-100" />
        </div>
    </div>
</form>

<hr />

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@product.ImageUrl" class="card-img-top" style="height: 200px; object-fit: cover;" alt="@product.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text text-muted small">@product.MainCategory?.Name / @product.SubCategory?.Name</p>
                    <p class="card-text small">@product.Brand</p>
                    <p class="card-text small">@product.Description</p>
                    <p class="fw-bold text-success fs-5 mt-auto">@product.Price.ToString("C2")</p>
                    
                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <a href="/Customer/Product/ProductDetail/@product.Id" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-eye me-1"></i>Detay
                        </a>
                        <form action="/Customer/Cart/AddToCart" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="productId" value="@product.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <input type="hidden" name="selectedSize" value="M" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fas fa-cart-plus me-1"></i>Sepete Ekle
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            // Seçili değerleri ayarla
            var selectedMainId = '@mainCategoryId';
            var selectedSubId = '@subCategoryId';
            var selectedBrand = '@brand';
            
            if (selectedMainId) {
                $('#MainCategorySelect').val(selectedMainId);
                loadSubCategories(selectedMainId, selectedSubId);
            }
            
            if (selectedBrand) {
                $('select[name="Brand"]').val(selectedBrand);
            }

            $('#MainCategorySelect').on('change', function () {
                var selectedMainId = $(this).val();
                loadSubCategories(selectedMainId, '');
            });

            function loadSubCategories(mainCategoryId, selectedSubId) {
                var subSelect = $('#SubCategorySelect');

                subSelect.empty();
                subSelect.append($('<option>', { value: '', text: 'Tümü' }));

                if (mainCategoryId) {
                    $.get('/Customer/Product/GetSubCategories', { mainCategoryId: mainCategoryId }, function (data) {
                        $.each(data, function (i, category) {
                            var option = $('<option>', {
                                value: category.id,
                                text: category.name
                            });
                            
                            if (category.id.toString() === selectedSubId) {
                                option.attr('selected', 'selected');
                            }
                            
                            subSelect.append(option);
                        });
                    });
                }
            }
        });
    </script>
}

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
    }
    
    .btn-sm {
        font-size: 0.875rem;
        padding: 0.25rem 0.5rem;
    }
</style>
