@model IEnumerable<MiniE_TicaretPaneli.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
    
    string GetStatusText(string status)
    {
        return status switch
        {
            "Pending" => "Beklemede",
            "Processing" => "İşleniyor",
            "Shipped" => "Kargoda",
            "Delivered" => "Teslim Edildi",
            "Cancelled" => "İptal Edildi",
            "Order Received" => "Siparişiniz Alındı",
            _ => status
        };
    }
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-shopping-bag me-2 text-primary"></i>Siparişlerim
                </h1>
                <a asp-controller="Product" asp-action="Products" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Yeni Sipariş
                </a>
            </div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <div class="mb-4">
            <i class="fas fa-shopping-bag fa-4x text-muted"></i>
        </div>
        <h4 class="text-muted mb-3">Henüz bir siparişiniz bulunmuyor</h4>
        <p class="text-muted mb-4">İlk siparişinizi vermek için alışverişe başlayın!</p>
        <a asp-controller="Product" asp-action="Products" class="btn btn-primary btn-lg">
            <i class="fas fa-shopping-cart me-2"></i>Alışverişe Başla
        </a>
    </div>
}
else
{
    <div class="accordion" id="ordersAccordion">
        @foreach (var order in Model)
        {
            <div class="accordion-item shadow-sm mb-3">
                <h2 class="accordion-header" id="heading_@order.Id">
                    <button class="accordion-button collapsed bg-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@order.Id" aria-expanded="false" aria-controls="collapse_@order.Id">
                        <div class="d-flex w-100 justify-content-between align-items-center">
                            <div>
                                @if (order.Status == "Cancelled")
                                {
                                    <i class="fas fa-times text-danger me-2"></i>
                                }
                                <strong>Sipariş No: #@order.Id</strong>
                                <br>
                                <small class="text-muted">@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                            <div class="text-end">
                                <span class="badge bg-primary fs-6">₺@order.TotalAmount.ToString("N2")</span>
                                <br>
                                <span class="badge bg-secondary">@GetStatusText(order.Status)</span>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="collapse_@order.Id" class="accordion-collapse collapse" aria-labelledby="heading_@order.Id" data-bs-parent="#ordersAccordion">
                    <div class="accordion-body">
                        @if (order.Status == "Cancelled")
                        {
                            <div class="alert alert-danger mb-3">Bu sipariş iptal edilmiştir.</div>
                        }
                        else if (order.Status == "Delivered")
                        {
                            <div class="alert alert-success mb-3">Bu sipariş başarıyla teslim edilmiştir.</div>
                        }
                        else if (order.Status == "Shipped")
                        {
                            <div class="alert alert-info mb-3">Bu sipariş kargoya verilmiştir.</div>
                        }
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 50%;">Ürün</th>
                                        <th class="text-center" style="width: 15%;">Adet</th>
                                        <th class="text-end" style="width: 15%;">Birim Fiyat</th>
                                        <th class="text-end" style="width: 20%;">Toplam</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in order.OrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                                        {
                                                            <a href="/Customer/Product/ProductDetail/@item.ProductId" 
                                                               class="text-decoration-none product-image-link"
                                                               title="Ürün detayını görüntüle">
                                                                <img src="@item.Product.ImageUrl" 
                                                                     class="img-thumbnail" 
                                                                     alt="@item.Product.Name" 
                                                                     style="width: 60px; height: 60px; object-fit: cover; transition: transform 0.2s;">
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <a href="/Customer/Product/ProductDetail/@item.ProductId" 
                                                               class="text-decoration-none product-image-link"
                                                               title="Ürün detayını görüntüle">
                                                                <div class="bg-light d-flex align-items-center justify-content-center rounded" 
                                                                     style="width: 60px; height: 60px; transition: transform 0.2s;">
                                                                    <i class="fas fa-image text-muted"></i>
                                                                </div>
                                                            </a>
                                                        }
                                                    </div>
                                                    <div>
                                                        <a href="/Customer/Product/ProductDetail/@item.ProductId" 
                                                           class="text-decoration-none text-dark fw-bold product-link"
                                                           title="Ürün detayını görüntüle">
                                                            @item.Product?.Name
                                                            <i class="fas fa-external-link-alt ms-1 text-muted" style="font-size: 0.8rem;"></i>
                                                        </a>
                                                        @if (!string.IsNullOrEmpty(item.SelectedSize))
                                                        {
                                                            <br>
                                                            <small class="text-muted">Beden: @item.SelectedSize</small>
                                                        }
                                                        @if (item.Product?.MainCategory != null)
                                                        {
                                                            <br>
                                                            <small class="text-muted">@item.Product.MainCategory.Name</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@item.Quantity</span>
                                            </td>
                                            <td class="text-end">₺@item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end fw-bold">₺@((item.UnitPrice * item.Quantity).ToString("N2"))</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Toplam:</strong></td>
                                        <td class="text-end"><strong>₺@order.TotalAmount.ToString("N2")</strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <form asp-action="CancelOrder" asp-controller="CustomerOrder" method="post" class="mt-3 cancel-order-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@order.Id" />
                            <button type="submit" class="btn btn-danger btn-sm btn-cancel-order" data-status="@order.Status">İptal Et</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

}
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .product-link:hover {
            color: #007bff !important;
            text-decoration: underline !important;
        }
        
        .product-image-link:hover {
            transform: scale(1.05) !important;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1) !important;
        }
        
        .product-image-link {
            cursor: pointer;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
    <script>
        $(document).ready(function () {
            $('.btn-cancel-order').click(function (e) {
                var status = $(this).data('status');
                var form = $(this).closest('form');
                // Sadece Processing veya Siparişiniz alındı ise iptal edilsin
                if (status === 'Processing' || status === 'Order Received' || status === 'Pending') {
                    e.preventDefault();
                    Swal.fire({
                        title: 'Emin misiniz?',
                        text: 'Bu siparişi iptal etmek istediğinize emin misiniz?',
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Evet, iptal et',
                        cancelButtonText: 'Vazgeç'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            form.submit();
                        }
                    });
                } else {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'info',
                        title: 'İptal Edilemez',
                        text: 'Bu aşamadaki bir siparişi iptal edemezsiniz.'
                    });
                }
            });
            
            // Ürün linklerine tıklama animasyonu
            $('.product-link, .product-image-link').click(function() {
                $(this).addClass('clicked');
                setTimeout(() => {
                    $(this).removeClass('clicked');
                }, 200);
            });
        });
    </script>
} 