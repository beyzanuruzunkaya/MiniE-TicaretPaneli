@model MiniE_TicaretPaneli.Models.CreditCard
@{
    ViewData["Title"] = "Kredi Kartı Güncelle";
}

<h1 class="mb-4">Kredi Kartı Güncelle</h1>
<div class="card shadow-sm p-4">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <form asp-action="EditCreditCard" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="CardHolderName" class="form-label">Kart Sahibi Adı Soyadı</label>
            <input asp-for="CardHolderName" class="form-control" />
            <span asp-validation-for="CardHolderName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CardNumberLastFour" class="form-label">Kart Numarası (Son 4 hane)</label>
            <input asp-for="CardNumberLastFour" class="form-control" maxlength="4" minlength="4" pattern="[0-9]{4}" />
            <span asp-validation-for="CardNumberLastFour" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-3 mb-3">
                <label asp-for="ExpiryMonth" class="form-label">Son Kullanma Ayı (MM)</label>
                <input asp-for="ExpiryMonth" class="form-control" maxlength="2" minlength="2" pattern="0[1-9]|1[0-2]" />
                <span asp-validation-for="ExpiryMonth" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="ExpiryYear" class="form-label">Son Kullanma Yılı (YY)</label>
                <input asp-for="ExpiryYear" class="form-control" maxlength="2" minlength="2" pattern="[0-9]{2}" />
                <span asp-validation-for="ExpiryYear" class="text-danger"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label asp-for="CvvHash" class="form-label">CVV (Sadece Simülasyon)</label>
                <input asp-for="CvvHash" class="form-control" maxlength="3" />
                <span asp-validation-for="CvvHash" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="d-flex justify-content-between">
            <a asp-action="CreditCards" class="btn btn-secondary">Kartlarıma Geri Dön</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Kaydet</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 