@model MiniE_TicaretPaneli.Models.Address
@{
    ViewData["Title"] = "Yeni Adres Ekle";
}

<h1 class="mb-4">Yeni Adres Ekle</h1>
<div class="card shadow-sm p-4">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>
    <form asp-action="AddAddress" asp-controller="Address" method="post">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Adres Başlığı</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="City" class="form-label">Şehir</label>
                <select asp-for="City" class="form-select" id="cityDropdown"></select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="District" class="form-label">İlçe</label>
                <select asp-for="District" class="form-select" id="districtDropdown"></select>
                <span asp-validation-for="District" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <label asp-for="AddressLine" class="form-label">Adres</label>
            <textarea asp-for="AddressLine" class="form-control"></textarea>
            <span asp-validation-for="AddressLine" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="PostalCode" class="form-label">Posta Kodu</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label asp-for="Phone" class="form-label">Telefon</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
        </div>
        <hr />
        <div class="d-flex justify-content-between">
            <a asp-action="AddressList" class="btn btn-secondary">Adreslerime Geri Dön</a>
            <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Kaydet</button>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/cityDistricts.js"></script>
    <script>
        $(document).ready(function () {
            var $city = $('#cityDropdown');
            var $district = $('#districtDropdown');
            $city.append($('<option>', { value: '', text: '-- Şehir Seçin --' }));
            $.each(cityDistricts, function (city, districts) {
                $city.append($('<option>', { value: city, text: city }));
            });
            $city.change(function () {
                var selectedCity = $(this).val();
                $district.empty();
                $district.append($('<option>', { value: '', text: '-- İlçe Seçin --' }));
                if (selectedCity && cityDistricts[selectedCity]) {
                    $.each(cityDistricts[selectedCity], function (i, district) {
                        $district.append($('<option>', { value: district, text: district }));
                    });
                }
            });
            var initialCity = '@(Model?.City ?? "")';
            var initialDistrict = '@(Model?.District ?? "")';
            if (initialCity) {
                $city.val(initialCity).trigger('change');
                if (initialDistrict) {
                    $district.val(initialDistrict);
                }
            }
        });
    </script>
} 