@model IEnumerable<MiniE_TicaretPaneli.Models.Address>
@{
    ViewData["Title"] = "Adreslerim";
}

<h1 class="mb-4">Adreslerim</h1>
<a asp-action="AddAddress" asp-controller="Address" class="btn btn-primary mb-3">+ Yeni Adres Ekle</a>
@if (!Model.Any())
{
    <div class="alert alert-info">Henüz kayıtlı adresiniz yok.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Başlık</th>
                    <th>Şehir</th>
                    <th>İlçe</th>
                    <th>Adres</th>
                    <th>Posta Kodu</th>
                    <th>Telefon</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.City</td>
                    <td>@item.District</td>
                    <td>@item.AddressLine</td>
                    <td>@item.PostalCode</td>
                    <td>@item.Phone</td>
                    <td>
                        <a asp-action="EditAddress" asp-controller="Address" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                        <form asp-action="DeleteAddress" asp-controller="Address" asp-route-id="@item.Id" method="post" class="d-inline ms-1">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger btn-delete-address">Sil</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
} 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('.btn-delete-address').click(function (e) {
                e.preventDefault();
                var form = $(this).closest('form');
                Swal.fire({
                    title: 'Emin misiniz?',
                    text: 'Bu adresi silmek istediğinize emin misiniz?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Evet, sil',
                    cancelButtonText: 'Vazgeç'
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
} 