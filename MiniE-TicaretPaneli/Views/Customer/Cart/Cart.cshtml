@model IEnumerable<MiniE_TicaretPaneli.Models.ShoppingCart>

@{
    ViewData["Title"] = "Sepetim";
    float totalAmount = 0;
    if (Model != null)
    {
        totalAmount = Model.Sum(item => (float)item.Product.Price * item.Quantity);
    }
}

<h1 class="mb-4">Sepetim</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info text-center">Sepetinizde ürün bulunmamaktadır. <a asp-controller="Customer" asp-action="Products">Alışverişe Başlayın!</a></div>
}
else
{
    <div class="card shadow-sm p-4 mb-4">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Ürün Adı</th>
                        <th>Beden</th>
                        <th>Birim Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ShoppingCart item in Model)
                    {
                        <tr>
                            <td><img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 60px; height: 60px; object-fit: cover; border-radius: 3px;"></td>
                            <td>@item.Product.Name</td>
                            <td>
                                <form asp-action="UpdateCartItemSize" asp-controller="Cart" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <select name="newSize" class="form-select form-select-sm" style="width: 100px; display: inline-block;" onchange="this.form.submit()">
                                        @foreach (var size in (item.Product.AvailableSizes ?? "").Split(',', System.StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <option value="@size" selected="@(item.SelectedSize == size ? "selected" : null)">@size</option>
                                        }
                                    </select>
                                </form>
                            </td>
                            <td>@item.Product.Price.ToString("C2")</td>
                            <td>
                                <form asp-action="UpdateCartItem" asp-controller="Cart" method="post" class="d-flex">
                                   
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <input type="number" name="newQuantity" value="@item.Quantity" min="1" max="@item.Product.Stock" class="form-control form-control-sm text-center" style="width: 70px;" onchange="this.form.submit()">
                                </form>
                            </td>
                            <td>@(((float)item.Product.Price * item.Quantity).ToString("C2"))</td>
                            <td>
                                <form asp-action="RemoveFromCart" asp-controller="Cart" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-end align-items-center mt-3">
            <h4 class="me-3">Genel Toplam: <span class="text-success fw-bold">@totalAmount.ToString("C2")</span></h4>
            <a asp-action="Checkout" asp-controller="CustomerOrder" asp-area="" class="btn btn-success btn-lg">
                <i class="fas fa-money-check-alt me-2"></i>Ödemeye Geç
            </a>
        </div>
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Sepet silme butonunda SweetAlert onayı
            $('form[action$="/Customer/RemoveFromCart"] button[type="submit"]').on('click', function (e) {
                e.preventDefault();
                var form = $(this).closest('form');
                Swal.fire({
                    title: 'Ürünü silmek istediğinize emin misiniz?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Evet, sil',
                    cancelButtonText: 'Vazgeç',
                }).then((result) => {
                    if (result.isConfirmed) {
                        form.submit();
                    }
                });
            });
        });
    </script>
}