@* Views/Customer/CustomerDashboard.cshtml *@
@{
    ViewData["Title"] = "Hesabım";
}

<h1 class="mb-4">Hesabım Paneli</h1>

<div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
    <div class="col">
        <div class="card h-100 text-center shadow-sm border-primary">
            <div class="card-body">
                <i class="fas fa-shopping-bag display-4 text-primary mb-3"></i>
                <h5 class="card-title">Siparişlerim</h5>
                <p class="card-text">Geçmiş siparişlerinizi görüntüleyin.</p>
                <a asp-controller="Customer" asp-action="Orders" class="btn btn-primary mt-3">Git <i class="fas fa-arrow-right ms-2"></i></a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center shadow-sm border-success">
            <div class="card-body">
                <i class="fas fa-credit-card display-4 text-success mb-3"></i>
                <h5 class="card-title">Kredi Kartlarım</h5>
                <p class="card-text">Kayıtlı kredi kartlarınızı yönetin.</p>
                <a asp-controller="Customer" asp-action="CreditCards" class="btn btn-success mt-3">Git <i class="fas fa-arrow-right ms-2"></i></a>
            </div>
        </div>
    </div>
    @* Daha fazla kart ekleyebilirsiniz: Adreslerim, Profil Bilgileri vb. *@
</div>