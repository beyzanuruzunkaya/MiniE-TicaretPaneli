@* Views/Home/Index.cshtml *@
@{
    ViewData["Title"] = "Anasayfa";
}

<section class="hero-section text-center text-white py-5 mb-5" style="background-image: url('/images/main-banner.jpg'); background-size: cover; background-position: center; min-height: 500px; display: flex; align-items: center; justify-content: center;">
    <div class="container">
        <h1 class="display-3 fw-bold text-shadow-dark">Tarzınızı Keşfedin!</h1>
        <p class="lead my-4 text-shadow-dark">En yeni kıyafet trendleri, aksesuarlar ve çok daha fazlası şimdi parmaklarınızın ucunda.</p>
        <a asp-controller="Customer" asp-action="Products" class="btn btn-warning btn-lg px-4 py-2 custom-btn-glow">
            <i class="fas fa-shopping-bag me-2"></i> Hemen Alışverişe Başla
        </a>
    </div>
</section>

<section class="container mb-5">
    <h2 class="text-center mb-4 display-5 fw-bold text-dark-emphasis">Popüler Kategoriler</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100 shadow-sm category-card text-center">
                <img src="/images/kadin-giyim-kategori.jpg" class="card-img-top" alt="Kadın Giyim">
                <div class="card-body">
                    <h5 class="card-title">Kadın Giyim</h5>
                    <p class="card-text">En şık ve güncel kadın giyim koleksiyonları.</p>
                    <a asp-controller="Customer" asp-action="Products" asp-route-gender="Kadın" class="btn btn-outline-primary mt-2">İncele <i class="fas fa-arrow-right ms-2"></i></a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm category-card text-center">
                <img src="/images/erkek-giyim-kategori.jpg" class="card-img-top" alt="Erkek Giyim">
                <div class="card-body">
                    <h5 class="card-title">Erkek Giyim</h5>
                    <p class="card-text">Tarz sahibi erkekler için özel seçkiler.</p>
                    <a asp-controller="Customer" asp-action="Products" asp-route-gender="Erkek" class="btn btn-outline-primary mt-2">İncele <i class="fas fa-arrow-right ms-2"></i></a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm category-card text-center">
                <img src="/images/cocuk-giyim-kategori.jpg" class="card-img-top" alt="Çocuk Giyim">
                <div class="card-body">
                    <h5 class="card-title">Çocuk Giyim</h5>
                    <p class="card-text">Minik kahramanlar için rahat ve şık giysiler.</p>
                    <a asp-controller="Customer" asp-action="Products" asp-route-gender="Çocuk" class="btn btn-outline-primary mt-2">İncele <i class="fas fa-arrow-right ms-2"></i></a>
                </div>
            </div>
        </div>
    </div>
</section>

