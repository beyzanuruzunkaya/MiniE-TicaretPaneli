@* Views/Admin/Dashboard/Index.cshtml *@
@{
    ViewData["Title"] = "Admin Paneli";
}

<h1 class="display-4 mb-4 text-center">Admin Paneline Hoş Geldiniz!</h1>

<div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
    <div class="col">
        <div class="card h-100 text-center shadow-sm border-primary">
            <div class="card-body">
                <i class="fas fa-box-open display-4 text-primary mb-3"></i>
                <h5 class="card-title">Ürün Yönetimi</h5>
                <p class="card-text">Ürünleri ekleyin, düzenleyin veya silin.</p>
                <a asp-controller="Product" asp-action="Products" class="btn btn-primary mt-3">Git <i class="fas fa-arrow-right ms-2"></i></a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center shadow-sm border-success">
            <div class="card-body">
                <i class="fas fa-users display-4 text-success mb-3"></i>
                <h5 class="card-title">Müşteri Görüntüleme</h5>
                <p class="card-text">Müşteri bilgilerini görüntüleyin.</p>
                <a asp-controller="User" asp-action="Users" class="btn btn-success mt-3">Git <i class="fas fa-arrow-right ms-2"></i></a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center shadow-sm border-info">
            <div class="card-body">
                <i class="fas fa-chart-line display-4 text-info mb-3"></i>
                <h5 class="card-title">Satış Görüntüleme</h5>
                <p class="card-text">Yapılan satışları ve sipariş detaylarını görün.</p>
                <a asp-controller="Order" asp-action="Sales" class="btn btn-info text-white mt-3">Git <i class="fas fa-arrow-right ms-2"></i></a>
            </div>
        </div>
    </div>
</div> 