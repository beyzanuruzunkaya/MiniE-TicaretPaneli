@* Views/Admin/Users.cshtml *@
@model IEnumerable<MiniE_TicaretPaneli.Models.User>

@{
    ViewData["Title"] = "Müşteri Görüntüleme";
}

<h1 class="mb-4">Müşteri Görüntüleme</h1>

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-dark text-white">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Username)</th>
                <th>@Html.DisplayNameFor(model => model.Role)</th>
                <th>Kayıt Tarihi (Örnek)</th> @* Modelinizde yoksa böyle bir sütun ekleyemezsiniz, bu sadece örnek *
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                    <td>@(DateTime.Now.AddDays(-new Random().Next(1, 365)).ToShortDateString())</td> @* Rastgele bir tarih *
                    <td>
                        @* İleride müşteri detay veya düzenleme action'ları eklenebilir *@
                <a href="#" class="btn btn-sm btn-info text-white disabled"><i class="fas fa-eye"></i> Detaylar</a>
                </td>
            </tr>
            }
            </tbody>
    </table>
</div>