@* Views/Admin/Products.cshtml *@
@model IEnumerable<MiniE_TicaretPaneli.Models.Product> // <<<<< Bu satır doğru olmalı

@{
    ViewData["Title"] = "Ürün Yönetimi";
}

<h1 class="mb-4">Ürün Yönetimi</h1>

<p>
    <a asp-controller="Product" asp-action="Products" class="btn btn-secondary">Listeye Geri Dön</a>
    <a asp-controller="Product" asp-action="AddProduct" class="btn btn-primary"><i class="fas fa-plus-circle me-2"></i>Yeni Ürün Ekle</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-dark text-white">
            <tr>
                <th>Görsel</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Stock)</th>
                <th>Ana Kategori</th>
                <th>Alt Kategori</th>
                <th>Cinsiyet</th>
                <th>Marka</th>
                <th>Bedenler</th>
                <th>Renkler</th>
                <th>Durum</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsActive ? "" : "table-secondary")">
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            var imagePath = item.ImageUrl.StartsWith("/") ? item.ImageUrl : "/" + item.ImageUrl;
                            <img src="@imagePath" alt="@item.Name" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px;" 
                                 onerror="this.onerror=null; this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                            <div class="bg-light d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 5px; display: none;">
                                <i class="fas fa-image text-muted"></i>
                            </div>
                        }
                        else
                        {
                            <div class="bg-light d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 5px;">
                                <i class="fas fa-image text-muted"></i>
                            </div>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@item.Price.ToString("C2")</td>
                    <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                    <td>@(item.MainCategory?.Name ?? "Kategori Yok")</td>
                    <td>@(item.SubCategory?.Name ?? "Kategori Yok")</td>
                    <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                    <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                    <td>@Html.DisplayFor(modelItem => item.AvailableSizes)</td>
                    <td>@Html.DisplayFor(modelItem => item.AvailableColors)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Pasif</span>
                        }
                    </td>
                    <td>
                        <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id" class="btn btn-sm btn-warning mb-1"><i class="fas fa-edit"></i> Düzenle</a>
                        @if (item.IsActive)
                        {
                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-1"><i class="fas fa-trash-alt"></i> Pasif Yap</a>
                        }
                        else
                        {
                            <form asp-controller="Product" asp-action="ActivateProduct" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-success mb-1" onclick="return confirm('Bu ürünü aktif hale getirmek istediğinizden emin misiniz?')">
                                    <i class="fas fa-check"></i> Aktif Yap
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
