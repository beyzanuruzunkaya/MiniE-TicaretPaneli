@* Views/Admin/Users.cshtml *@
@model IEnumerable<MiniE_TicaretPaneli.Models.User>

@{
    ViewData["Title"] = "Müşteri Görüntüleme";
}

<h1 class="mb-4">Müşteri Görüntüleme</h1>


<div class="table-responsive">
    <table class="table table-striped table-hover shadow-sm">
        <thead class="bg-dark text-white">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>Rol</th>
                <th>Kayıt Tarihi (Örnek)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.Role</td>
                <td>@(DateTime.Now.AddDays(-new Random().Next(1, 365)).ToShortDateString())</td>
                <td>
                    <button type="button" class="btn btn-sm btn-info text-white btn-user-details"
                        data-username="@item.Username"
                        data-firstname="@item.FirstName"
                        data-lastname="@item.LastName"
                        data-email="@item.Email"
                        data-role="@item.Role"
                        data-phone="@item.PhoneNumber">
                        <i class="fas fa-eye"></i> Detaylar
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

<!-- Kullanıcı Detay Modalı -->
<div class="modal fade" id="userDetailsModal" tabindex="-1" aria-labelledby="userDetailsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="userDetailsModalLabel">Kullanıcı Detayları</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <dl class="row">
          <dt class="col-sm-4">Kullanıcı Adı</dt>
          <dd class="col-sm-8" id="modalUsername"></dd>
          <dt class="col-sm-4">Ad</dt>
          <dd class="col-sm-8" id="modalFirstName"></dd>
          <dt class="col-sm-4">Soyad</dt>
          <dd class="col-sm-8" id="modalLastName"></dd>
          <dt class="col-sm-4">E-posta</dt>
          <dd class="col-sm-8" id="modalEmail"></dd>
          <dt class="col-sm-4">Rol</dt>
          <dd class="col-sm-8" id="modalRole"></dd>
          <dt class="col-sm-4">Telefon</dt>
          <dd class="col-sm-8" id="modalPhone"></dd>
        </dl>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
      </div>
    </div>
  </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.btn-user-details').click(function () {
                $('#modalUsername').text($(this).data('username'));
                $('#modalFirstName').text($(this).data('firstname'));
                $('#modalLastName').text($(this).data('lastname'));
                $('#modalEmail').text($(this).data('email'));
                $('#modalRole').text($(this).data('role'));
                $('#modalPhone').text($(this).data('phone'));
                var modal = new bootstrap.Modal(document.getElementById('userDetailsModal'));
                modal.show();
            });
        });
    </script>
}