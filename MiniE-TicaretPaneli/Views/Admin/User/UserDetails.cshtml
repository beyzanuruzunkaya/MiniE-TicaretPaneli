@model MiniE_TicaretPaneli.Models.User
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<h1 class="mb-4">Kullanıcı Detayları</h1>
<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-3">Kullanıcı Adı</dt>
        <dd class="col-sm-9">@Model.Username</dd>
        <dt class="col-sm-3">Ad</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        <dt class="col-sm-3">Soyad</dt>
        <dd class="col-sm-9">@Model.LastName</dd>
        <dt class="col-sm-3">E-posta</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        <dt class="col-sm-3">Rol</dt>
        <dd class="col-sm-9">@Model.Role</dd>
        <dt class="col-sm-3">Telefon</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>
    </dl>
    <a asp-action="Users" class="btn btn-secondary">Geri Dön</a>
</div> 