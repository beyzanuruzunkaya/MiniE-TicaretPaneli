@* Views/Account/ForgotPassword.cshtml *@
@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg p-4">
                <h2 class="card-title text-center mb-4">Şifremi Sıfırla</h2>
                <hr />

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="emailOrUsername" class="form-label">E-posta Adresiniz veya Kullanıcı Adınız:</label>
                        <input type="text" id="emailOrUsername" name="emailOrUsername" class="form-control" required autofocus autocomplete="username">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-paper-plane me-2"></i>Sıfırlama Linki Gönder</button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <p class="text-muted"><a asp-action="Login" asp-controller="Account" class="text-decoration-none">Giriş Sayfasına Geri Dön</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}