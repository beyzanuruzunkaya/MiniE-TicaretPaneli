
@model MiniE_TicaretPaneli.Models.User 
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_Layout";
}
            <div class="card shadow-lg p-4">
                <h2 class="card-title text-center mb-4">Yeni Hesap Oluştur</h2>
                <hr />

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <form asp-action="Register" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger mb-3"></div> 

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label">Ad:</label>
                        <input asp-for="FirstName" class="form-control" autocomplete="given-name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label">Soyad:</label>
                        <input asp-for="LastName" class="form-control" autocomplete="family-name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label">Kullanıcı Adı:</label>
                        <input asp-for="Username" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-posta Adresi:</label>
                        <input asp-for="Email" class="form-control" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası (İsteğe Bağlı):</label>
                        <input asp-for="PhoneNumber" class="form-control" autocomplete="tel" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PasswordHash" class="form-label">Şifre:</label>
                        <input asp-for="PasswordHash" class="form-control" type="password" autocomplete="new-password" />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                        <small class="form-text text-muted">Şifre en az 8 karakter, bir büyük harf, bir küçük harf, bir rakam ve bir özel karakter içermelidir.</small>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg"><i class="fas fa-user-plus me-2"></i>Kayıt Ol</button>
                    </div>
                </form>

                <div class="mt-4 text-center">
                    <p class="text-muted">Zaten hesabın var mı? <a asp-action="Login" asp-controller="Account" class="text-decoration-none">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}